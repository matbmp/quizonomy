@tailwind base;
@tailwind components;
@tailwind utilities;

*::-webkit-scrollbar {
    width: 16px;
}

*::-webkit-scrollbar-track {
    
    background-color: #110C2066;
    border: 1px solid #bbbbbb66;
}

*::-webkit-scrollbar-thumb {
    border-radius: 8px;
  border: 3px solid transparent;
   background-clip: content-box;
    background-color: #ffffff66;
}